@model IEnumerable<WebApplication3.Models.Mesajlar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Mesaj Kutusu</h1>

<p>
    <a asp-action="Create">Mesaj Gönder</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlıcıID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlıcıName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GönderenID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GönderenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mesajİcerigi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlıcıID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlıcıName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GönderenID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GönderenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesajİcerigi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
